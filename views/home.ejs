<h1>codial / <%= title %>
</h1>

<section id="feed-posts">
    <h2>Posts</h2>
    <form action="/posts/create" method="POST" id="new-post">
        <textarea name="content" cols="30" rows="3" required placeholder="type here ..."></textarea>
        <input type="submit" value="Post">
    </form>
</section>

<section id="post-list">
    <h2>Posts List</h2>
    <ul>
        <% for(let post of post_list){ %>
            <li>
                <div class="post-content">
                    <p>
                        <%= post.content %>
                            <br>
                            <%= post.user.name %>
                    </p>
                </div>
            </li>

            <% } %>

    </ul>

</section>