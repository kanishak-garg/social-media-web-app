<li id="comment-<%=comment._id%>">
    <p>
        <% if(locals.user && (locals.user.id==comment.user.id || locals.user.id==post.user.id)){ %>
            <small><a class="delete-comment-button" href="/comments/delete/<%= comment._id %>">X</a></small>
            <% } %>
        <%= comment.content %> <br>
            <small>
                <%= comment.user.name %>
            </small>
            <%if(locals.user){%>
            <div id="like_div_comment">
                <a href="/likes/toggle/?id=<%= comment._id %>&type=Comment" class="comment-like" id="like-<%=comment._id%>">
                    <% var liked="",notliked="hide" %>
                    <% var likes = comment.likes %>
                    <% for(like in likes){%>
                        <% if(likes[like].user == locals.user.id){%>
                            <%liked="hide";notliked=""; break; %>
                            <%} %>
                        <%} %>
                    <i class="far fa-thumbs-up like_icon_comment  <%=liked%>"></i>
                    <i class="fas fa-thumbs-up like_icon_comment <%=notliked%>"></i>  
                </a>
            </div>
            <%}%>
    </p>
    <p id="count-<%=comment.id%>">likes: <strong id="counts"><%=post.likes.length%></strong></p>

    
</li>